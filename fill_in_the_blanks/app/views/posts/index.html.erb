<!-- Create the rest of your views in the posts folder -->
<h1>Here are all the posts!</h1>
<h3><%= link_to 'Create New Post', new_post_path(@post) %></h3>
<% @posts.each do |post| %>
	<div>
		
		<strong><p><%= post.bru_name %>:</p></strong>
		<p><%= post.title %></p>
		<p><%= post.body %></p>
		<p><%= link_to 'Show', post_path(post) %></p>
		<p><%= link_to 'Edit', edit_post_path(post) %>
		<p><%= link_to 'Destroy', post_path(post),
			    method: :delete, data:{ confirm: "once delete, cannot retrieve!" } %></p>
		
	</div>
<% end %>

